// Place your key bindings in this file to override the defaults
[
  {
    "key": "ctrl+r ctrl+r",
    "command": "renameFile",
    "when": "explorerViewletFocus",
  },
  {
    "key": "ctrl+r ctrl+r",
    "command": "editor.action.rename",
    "when": "editorFocus && !editorReadonly",
  },

  {
    "key": "ctrl+shift+s",
    "command": "saveAll",
  },

  {
    "key": "ctrl+w",
    "command": "workbench.action.closeAuxiliaryBar",
    "when": "auxiliaryBarFocus",
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.closeSidebar",
    "when": "sideBarFocus",
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.togglePanel",
    "when": "panelFocus",
  },

  {
    "key": "ctrl+[",
    "command": "workbench.action.navigateBackInEditLocations",
  },
  {
    "key": "ctrl+]",
    "command": "workbench.action.navigateForwardInEditLocations",
  },
  {
    "key": "ctrl+u",
    "command": "inlineChat.start",
  },
  {
    "key": "ctrl+k ctrl+o",
    "command": "editor.action.goToDeclaration",
  },
  {
    "key": "ctrl+i",
    "command": "editor.action.triggerSuggest",
  },

  {
    "key": "ctrl+shift+u",
    "command": "workbench.panel.chat",
  },

  {
    "key": "ctrl+up",
    "command": "runCommands",
    "args": { // x8
      "commands": ["cursorUp", "cursorUp", "cursorUp", "cursorUp", "cursorUp", "cursorUp", "cursorUp", "cursorUp"],
    },
    "when": "textInputFocus",
  },

  {
    "key": "ctrl+down",
    "command": "runCommands",
    "args": { // x8
      "commands": ["cursorDown", "cursorDown", "cursorDown", "cursorDown", "cursorDown", "cursorDown", "cursorDown", "cursorDown"],
    },
    "when": "textInputFocus",
  },

  {
    "key": "ctrl+`",
    "command": "terminal.focus",
    "when": "!terminalFocus",
  },
  {
    "key": "ctrl+`",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus",
  },

  {
    "key": "ctrl+n",
    "command": "explorer.newFile",
  },
  {
    "key": "ctrl+shift+n",
    "command": "explorer.newFolder",
  },

  {
    "key": "ctrl+g ctrl+c",
    "command": "git.checkout",
  },
  {
    "key": "ctrl+g ctrl+n",
    "command": "git.branchFrom",
  },
  {
    "key": "ctrl+g ctrl+r",
    "command": "git.rebase",
  },
  {
    "key": "ctrl+g ctrl+p",
    "command": "git.push",
  },
  {
    "key": "ctrl+g ctrl+o",
    "command": "git.commit",
  },
]