[
  // see: https://code.visualstudio.com/docs/editing/userdefinedsnippets#_variables
  
  {
    "key": "ctrl+shift+c",
    "command": "-workbench.action.terminal.openNativeConsole",
    "when": "!terminalFocus",
  },

  {
    "key": "ctrl+r ctrl+r",
    "command": "renameFile",
    "when": "explorerViewletFocus",
  },
  {
    "key": "ctrl+r ctrl+r",
    "command": "editor.action.rename",
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+r ctrl+u",
    "command": "editor.action.transformToUppercase",
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+r ctrl+l",
    "command": "editor.action.transformToLowercase",
    "when": "editorTextFocus",
  },

  {
    "key": "ctrl+insert ctrl+0",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "$CURSOR_INDEX",
    },
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+insert ctrl+1",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "$CURSOR_NUMBER",
    },
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+insert ctrl+u",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "$UUID",
    },
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+insert ctrl+'",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "' +\n${TM_CURRENT_LINE/.*(?<=([$@f]*))'.*(?:(?<!\\\\)|(?:\\\\\\\\)+)'.*/$1/}'",
    },
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+insert ctrl+shift+'",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "\" +\n${TM_CURRENT_LINE/.*(?<=([$@f]*))\".*(?:(?<!\\\\)|(?:\\\\\\\\)+)\".*/$1/}\"",
    },
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+insert ctrl+`",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "\n",
    },
    "when": "editorTextFocus",
  },
  {
    "key": "shift+,",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "<${0:$TM_SELECTED_TEXT}>",
    },
    "when": "editorTextFocus && editor.hasSelection",
  },
  {
    "key": "shift+.",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "<$1>${0:$TM_SELECTED_TEXT}</$1>",
    },
    "when": "editorTextFocus && editor.hasSelection",
  },
  {
    "key": "shift+enter",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "\n${0:$TM_SELECTED_TEXT}\n",
    },
    "when": "editorTextFocus && editor.hasSelection",
  },
  {
    "key": "ctrl+shift+/",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "\n\t? $1\n\t: $0",
    },
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+shift+v",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "${0:$CLIPBOARD}",
    },
    "when": "editorTextFocus",
  },

  {
    "key": "ctrl+shift+s",
    "command": "saveAll",
  },

  {
    "key": "ctrl+w",
    "command": "workbench.action.closeAuxiliaryBar",
    "when": "auxiliaryBarFocus",
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.closeSidebar",
    "when": "sideBarFocus && activeEditorIsNotPreview",
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.closeActiveEditor",
    "when": "sideBarFocus && !activeEditorIsNotPreview",
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.togglePanel",
    "when": "panelFocus",
  },
  {
    "key": "ctrl+w",
    "command": "closeReferenceSearch",
    "when": "editorTextFocus && referenceSearchVisible && !config.editor.stablePeek || referenceSearchVisible && !config.editor.stablePeek && !inputFocus"
  },

  {
    "key": "ctrl+u",
    "command": "inlineChat.start",
  },
  {
    "key": "ctrl+k ctrl+o",
    "command": "editor.action.goToDeclaration",
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+k ctrl+k",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorTextFocus",
  },
  {
    "key": "ctrl+k ctrl+k",
    "command": "workbench.action.navigateBackInEditLocations",
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+k ctrl+l",
    "command": "workbench.action.navigateForwardInEditLocations",
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+i",
    "command": "editor.action.triggerSuggest",
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+k ctrl+s",
    "command": "editor.action.setSelectionAnchor",
    "when": "editorTextFocus",
  },
  {
    "key": "ctrl+k ctrl+k",
    "command": "editor.action.goToSelectionAnchor",
    "when": "selectionAnchorSet",
  },
  {
    "key": "shift+ctrl+k shift+ctrl+k",
    "command": "editor.action.selectFromAnchorToCursor",
    "when": "editorTextFocus && selectionAnchorSet",
  },

  {
    "key": "ctrl+shift+u",
    "command": "workbench.panel.chat",
  },
  {
    "key": "ctrl+alt+u",
    "command": "runCommands",
    "args": {
      "commands": [
        "inlineChat.start",
        {
          "command": "editor.action.insertSnippet",
          "args": { "snippet": "/generate" },
        },
        "workbench.action.chat.submit",
      ],
    },
  },

  {
    "key": "ctrl+up",
    "command": "runCommands",
    "args": { // x8
      "commands": [
        "cursorUp",
        "cursorUp",
        "cursorUp",
        "cursorUp",
        "cursorUp",
        "cursorUp",
        "cursorUp",
        "cursorUp"],
    },
    "when": "textInputFocus",
  },
  {
    "key": "shift+ctrl+up",
    "command": "runCommands",
    "args": { // x8
      "commands": [
        "cursorUpSelect",
        "cursorUpSelect",
        "cursorUpSelect",
        "cursorUpSelect",
        "cursorUpSelect",
        "cursorUpSelect",
        "cursorUpSelect",
        "cursorUpSelect"],
    },
    "when": "textInputFocus",
  },
  {
    "key": "ctrl+down",
    "command": "runCommands",
    "args": { // x8
      "commands": [
        "cursorDown",
        "cursorDown",
        "cursorDown",
        "cursorDown",
        "cursorDown",
        "cursorDown",
        "cursorDown",
        "cursorDown"],
    },
    "when": "textInputFocus",
  },
  {
    "key": "shift+ctrl+down",
    "command": "runCommands",
    "args": { // x8
      "commands": [
        "cursorDownSelect",
        "cursorDownSelect",
        "cursorDownSelect",
        "cursorDownSelect",
        "cursorDownSelect",
        "cursorDownSelect",
        "cursorDownSelect",
        "cursorDownSelect"],
    },
    "when": "textInputFocus",
  },
  {
    "key": "ctrl+up",
    "command": "runCommands",
    "args": { // x8
      "commands": [
        "selectPrevSuggestion",
        "selectPrevSuggestion",
        "selectPrevSuggestion",
        "selectPrevSuggestion",
        "selectPrevSuggestion",
        "selectPrevSuggestion",
        "selectPrevSuggestion",
        "selectPrevSuggestion"],
    },
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion",
  },
  {
    "key": "ctrl+down",
    "command": "runCommands",
    "args": { // x8
      "commands": [
        "selectNextSuggestion",
        "selectNextSuggestion",
        "selectNextSuggestion",
        "selectNextSuggestion",
        "selectNextSuggestion",
        "selectNextSuggestion",
        "selectNextSuggestion",
        "selectNextSuggestion"],
    },
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion",
  },
  {
    "key": "ctrl+up",
    "command": "runCommands",
    "args": { // x8
      "commands": [
        "selectPrevCodeAction",
        "selectPrevCodeAction",
        "selectPrevCodeAction",
        "selectPrevCodeAction",
        "selectPrevCodeAction",
        "selectPrevCodeAction",
        "selectPrevCodeAction",
        "selectPrevCodeAction"],
    },
    "when": "codeActionMenuVisible",
  },
  {
    "key": "ctrl+down",
    "command": "runCommands",
    "args": { // x8
      "commands": [
        "selectNextCodeAction",
        "selectNextCodeAction",
        "selectNextCodeAction",
        "selectNextCodeAction",
        "selectNextCodeAction",
        "selectNextCodeAction",
        "selectNextCodeAction",
        "selectNextCodeAction"],
    },
    "when": "codeActionMenuVisible",
  },
  {
    "key": "ctrl+up",
    "command": "runCommands",
    "args": { // x8
      "commands": [
        "list.scrollUp",
        "list.scrollUp",
        "list.scrollUp",
        "list.scrollUp",
        "list.scrollUp",
        "list.scrollUp",
        "list.scrollUp",
        "list.scrollUp"],
    },
    "when": "listFocus && !inputFocus && !treestickyScrollFocused && listScrollAtBoundary != 'both' && listScrollAtBoundary != 'top'",
  },
  {
    "key": "ctrl+down",
    "command": "runCommands",
    "args": { // x8
      "commands": [
        "list.scrollDown",
        "list.scrollDown",
        "list.scrollDown",
        "list.scrollDown",
        "list.scrollDown",
        "list.scrollDown",
        "list.scrollDown",
        "list.scrollDown"],
    },
    "when": "listFocus && !inputFocus && !treestickyScrollFocused && listScrollAtBoundary != 'both' && listScrollAtBoundary != 'top'",
  },
  {
    "key": "alt+left",
    "command": "editor.action.outdentLines",
    "when": "editorTextFocus",
  },
  {
    "key": "alt+right",
    "command": "editor.action.indentLines",
    "when": "editorTextFocus",
  },

  {
    "key": "ctrl+`",
    "command": "terminal.focus",
    "when": "!terminalFocus",
  },
  {
    "key": "ctrl+`",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus",
  },

  {
    "key": "ctrl+n",
    "command": "explorer.newFile",
  },
  {
    "key": "ctrl+shift+n",
    "command": "explorer.newFolder",
  },

  {
    "key": "ctrl+g ctrl+o",
    "command": "git.checkout",
  },
  {
    "key": "ctrl+g ctrl+n",
    "command": "git.branchFrom",
  },
  {
    "key": "ctrl+g ctrl+r",
    "command": "git.rebase",
  },
  {
    "key": "ctrl+g ctrl+p",
    "command": "git.push",
  },
  {
    "key": "ctrl+g shift+ctrl+p",
    "command": "git.publish",
  },
  {
    "key": "ctrl+g ctrl+u",
    "command": "git.pull",
  },
  {
    "key": "ctrl+g ctrl+c",
    "command": "git.commitStaged",
  },
  {
    "key": "ctrl+g ctrl+a",
    "command": "git.commitStagedAmend",
  },
  {
    "key": "ctrl+g ctrl+m",
    "command": "git.merge",
  },
  {
    "key": "ctrl+g ctrl+s",
    "command": "git.stash",
  },
  {
    "key": "ctrl+g ctrl+v",
    "command": "git.stashApply",
  },
  {
    "key": "ctrl+g ctrl+z",
    "command": "git.undoCommit",
  },
  {
    "key": "ctrl+g ctrl+]",
    "command": "git.stage",
  },
  {
    "key": "ctrl+g ctrl+[",
    "command": "git.unstage",
  },
  {
    "key": "ctrl+g ctrl+m",
    "command": "git.merge",
  },
  {
    "key": "ctrl+g ctrl+s",
    "command": "git.stash",
  },
  {
    "key": "ctrl+g ctrl+v",
    "command": "git.stashApply",
  },
  {
    "key": "ctrl+g ctrl+]",
    "command": "git.stage",
  },
  {
    "key": "ctrl+g ctrl+[",
    "command": "git.unstage",
  },
]